mixin btn(data)
	if data.type && data.type === 'link'
		- var link = '#'
		if data.url
			- var link = data.url

		a.btn(href=link, id!=attributes.id, role="button")&attributes(attributes)
			if data.icon_l
				span(class=data.icon_l)

			if data.text
				span.btn__text!=data.text

			if data.icon_r
				span(class=data.icon_r)
	else
		- var type = 'button'
		if data.type && data.type === 'submit'
			- var type = 'submit'

		button.btn(id!=attributes.id, type=type, name=data.name)&attributes(attributes)
			if data.icon_l
				span(class=data.icon_l)

			if data.text
				span.btn__text!=data.text

			if data.icon_r
				span(class=data.icon_r)
